---
// Layout para perfiles de artistas
import Layout from './Layout.astro';

interface Props {
  title: string;
  artistName: string;
  artistImage: string;
  biography: string;
  socialLinks?: {
    instagram?: string;
    youtube?: string;
    spotify?: string;
    twitter?: string;
  };
  albums?: Array<{
    title: string;
    image: string;
    url: string;
    year?: string;
  }>;
}

const { title, artistName, artistImage, biography, socialLinks, albums } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;

const getAssetPath = (asset: string) => {
  const cleanBase = baseUrl.endsWith('/') ? baseUrl : `${baseUrl}/`;
  const cleanAsset = asset.startsWith('/') ? asset.slice(1) : asset;
  return `${cleanBase}${cleanAsset}`;
};
---

<Layout title={title}>
  <div class="artist-profile">
    <!-- Hero Section -->
    <section class="artist-hero">
      <div class="hero-content">
        <div class="hero-image">
          <img src={getAssetPath(artistImage)} alt={artistName} />
        </div>
        <div class="hero-info">
          <h1 class="artist-name">{artistName}</h1>
          
          {socialLinks && (
            <div class="social-links">
              {socialLinks.spotify && (
                <a href={socialLinks.spotify} target="_blank" rel="noopener" aria-label="Spotify">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
                  </svg>
                </a>
              )}
              {socialLinks.youtube && (
                <a href={socialLinks.youtube} target="_blank" rel="noopener" aria-label="YouTube">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                  </svg>
                </a>
              )}
              {socialLinks.instagram && (
                <a href={socialLinks.instagram} target="_blank" rel="noopener" aria-label="Instagram">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                </a>
              )}
              {socialLinks.twitter && (
                <a href={socialLinks.twitter} target="_blank" rel="noopener" aria-label="Twitter">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                </a>
              )}
            </div>
          )}
        </div>
      </div>
    </section>

    <!-- Biography Section -->
    <section class="artist-biography">
      <div class="container">
        <h2>Biografía</h2>
        <div class="biography-content" set:html={biography} />
      </div>
    </section>

    <!-- Albums Section -->
    {albums && albums.length > 0 && (
      <section class="artist-albums">
        <div class="container">
          <h2>Discografía</h2>
          <div class="albums-grid">
            {albums.map(album => (
              <a href={album.url} class="album-card">
                <img src={getAssetPath(album.image)} alt={album.title} />
                <h3>{album.title}</h3>
                {album.year && <p class="album-year">{album.year}</p>}
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Additional Content Slot -->
    <slot />
  </div>
</Layout>

<style>
  .artist-profile {
    min-height: 100vh;
  }

  /* Hero Section */
  .artist-hero {
    background: linear-gradient(135deg, rgba(123, 63, 228, 0.1), rgba(231, 60, 126, 0.1));
    padding: 4rem 2rem;
    margin-bottom: 3rem;
  }

  .hero-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    gap: 3rem;
    align-items: center;
  }

  .hero-image {
    flex: 0 0 300px;
  }

  .hero-image img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: 1rem;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
  }

  .hero-info {
    flex: 1;
  }

  .artist-name {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, #7B3FE4, #E73C7E);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: #ffffff;
    transition: all 0.3s ease;
  }

  .social-links a:hover {
    background: linear-gradient(135deg, #7B3FE4, #E73C7E);
    transform: translateY(-3px);
  }

  /* Biography Section */
  .artist-biography {
    padding: 3rem 2rem;
  }

  .artist-biography .container {
    max-width: 900px;
    margin: 0 auto;
  }

  .artist-biography h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    color: #7B3FE4;
  }

  .biography-content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #e0e0e0;
  }

  /* Albums Section */
  .artist-albums {
    padding: 3rem 2rem;
    background: rgba(255, 255, 255, 0.02);
  }

  .artist-albums .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .artist-albums h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    color: #7B3FE4;
  }

  .albums-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 2rem;
  }

  .album-card {
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease;
  }

  .album-card:hover {
    transform: translateY(-5px);
  }

  .album-card img {
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
  }

  .album-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .album-year {
    color: #999;
    font-size: 0.9rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-content {
      flex-direction: column;
      text-align: center;
    }

    .hero-image {
      flex: 0 0 auto;
    }

    .artist-name {
      font-size: 2rem;
    }

    .social-links {
      justify-content: center;
    }

    .albums-grid {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 1rem;
    }
  }
</style>