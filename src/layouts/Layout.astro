---
// Layout Base - DAG Klassical (SEO Centralizado + Structured Data)
// Archivo: src/layouts/Layout.astro
// Propósito: Layout base con SEO avanzado y structured data automático
// Mejoras: JSON-LD, Open Graph avanzado, Twitter Cards, canonical URLs

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article' | 'profile' | 'music.album' | 'music.song' | 'organization';
  artistName?: string;
  albumName?: string;
  musicGenre?: string;
  releaseDate?: string;
  url?: string;
  canonical?: string;
  structuredData?: any; // JSON-LD personalizado
}

// Props del layout
const { 
  title, 
  description = "DAG Klassical - Plataforma de música clásica venezolana con tecnología blockchain",
  image = "/logo-dag.svg",
  type = "website",
  artistName,
  albumName,
  musicGenre,
  releaseDate,
  url,
  canonical,
  structuredData
} = Astro.props;

// CSS Centralizado Importado
import '../styles/global.css';
// Componentes Centralizados
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Configuración de URLs y metadatos
const baseUrl = import.meta.env.BASE_URL || 'https://dagklassical.com';
const fullUrl = url || `${baseUrl}${Astro.url.pathname}`;
const fullTitle = title.includes('DAG Klassical') ? title : `${title} | DAG Klassical`;
const fullImage = image.startsWith('http') ? image : `${baseUrl}${image}`;
const canonicalUrl = canonical || fullUrl;

// Structured Data automático según el tipo de página
const generateStructuredData = () => {
  const baseData = {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "DAG Klassical",
    "url": baseUrl,
    "logo": `${baseUrl}/logo-dag.svg`,
    "description": "Plataforma de música clásica venezolana con tecnología blockchain para NFTs musicales",
    "sameAs": [
      "https://instagram.com/dagklassical",
      "https://twitter.com/dagklassical",
      "https://youtube.com/dagklassical"
    ]
  };

  // Structured Data específico según el tipo
  if (type === 'music.album' && albumName && artistName) {
    return {
      "@context": "https://schema.org",
      "@type": "MusicAlbum",
      "name": albumName,
      "byArtist": {
        "@type": "Person",
        "name": artistName
      },
      "genre": musicGenre || "Música Clásica",
      "datePublished": releaseDate,
      "url": fullUrl,
      "image": fullImage,
      "publisher": {
        "@type": "Organization",
        "name": "DAG Klassical"
      }
    };
  }

  if (type === 'profile' && artistName) {
    return {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": artistName,
      "description": description,
      "image": fullImage,
      "url": fullUrl,
      "sameAs": [],
      "jobTitle": "Músico",
      "worksFor": {
        "@type": "Organization",
        "name": "DAG Klassical"
      }
    };
  }

  if (type === 'music.song' && albumName && artistName) {
    return {
      "@context": "https://schema.org",
      "@type": "MusicRecording",
      "name": albumName,
      "byArtist": {
        "@type": "Person",
        "name": artistName
      },
      "genre": musicGenre || "Música Clásica",
      "inAlbum": {
        "@type": "MusicAlbum",
        "name": albumName
      },
      "url": fullUrl,
      "datePublished": releaseDate
    };
  }

  // Structured Data para organización (página principal)
  return baseData;
};

const structuredData = structuredData || generateStructuredData();

// Metadatos adicionales
const jsonLdScript = JSON.stringify(structuredData, null, 2);
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Meta Tags Básicos -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="DAG Klassical" />
    <meta name="keywords" content="música clásica, Venezuela, blockchain, NFT, DAG Klassical, artistas venezolanos" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Open Graph Tags -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImage} />
    <meta property="og:url" content={fullUrl} />
    <meta property="og:type" content={type} />
    <meta property="og:site_name" content="DAG Klassical" />
    <meta property="og:locale" content="es_VE" />
    
    <!-- Twitter Card Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullImage} />
    <meta name="twitter:site" content="@dagklassical" />
    <meta name="twitter:creator" content="@dagklassical" />
    
    <!-- Meta Tags Específicos para Música -->
    {type === 'music.album' && (
      <>
        <meta property="music:album" content={albumName} />
        <meta property="music:musician" content={artistName} />
        <meta property="music:song" content={albumName} />
      </>
    )}
    
    {type === 'profile' && artistName && (
      <meta property="music:musician" content={artistName} />
    )}
    
    <!-- Favicon y PWA -->
    <link rel="icon" type="image/svg+xml" href="/logo-dag.svg" />
    <link rel="apple-touch-icon" href="/logo-dag.svg" />
    
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
      {jsonLdScript}
    </script>
    
    <!-- CSS Critical para mejor performance -->
    <style>
      body { 
        margin: 0; 
        font-family: var(--font-family);
        background-color: var(--bg-primary);
        color: var(--text-primary);
        line-height: 1.6;
      }
      .skip-link { 
        position: absolute; 
        top: -40px; 
        left: 6px; 
        z-index: 10000; 
        background: var(--color-primary);
        color: white;
        padding: 8px 12px;
        border-radius: var(--border-radius-sm);
        text-decoration: none;
        transition: top 0.3s;
      }
      .skip-link:focus { 
        top: 6px; 
      }
      .main-content {
        min-height: calc(100vh - 200px);
        padding-top: var(--spacing-lg);
      }
    </style>
    
    <!-- Performance: Preload critical resources -->
    <link rel="preload" href="/logo-dag.svg" as="image" />
    
    <!-- Accessibility: Skip to content -->
    <style>
      .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
      }
      
      *:focus-visible {
        outline: 2px solid var(--color-primary);
        outline-offset: 2px;
      }
    </style>
  </head>
  
  <body>
    <!-- Skip to content para accesibilidad -->
    <a href="#main-content" class="skip-link">Saltar al contenido principal</a>
    
    <!-- Header Centralizado -->
    <Header />
    
    <!-- Contenido Principal -->
    <main id="main-content" class="main-content">
      <slot />
    </main>
    
    <!-- Footer Centralizado -->
    <Footer />
    
    <!-- JSON-LD debugging (solo en desarrollo) -->
    {import.meta.env.DEV && (
      <script>
        console.log('Structured Data:', {jsonLdScript});
      </script>
    )}
  </body>
</html>

<style>
  /* Estilos específicos del layout base */
  .main-content {
    min-height: calc(100vh - 200px);
    padding-top: var(--spacing-lg);
    padding-bottom: var(--spacing-xl);
  }
  
  /* Focus visible para navegación por teclado */
  *:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }
  
  /* Skip to content link */
  .skip-link {
    position: absolute;
    top: -40px;
    left: 6px;
    background: var(--color-primary);
    color: white;
    padding: 8px 12px;
    border-radius: var(--border-radius-sm);
    text-decoration: none;
    z-index: 10000;
    transition: top 0.3s;
    font-weight: 500;
  }
  
  .skip-link:focus {
    top: 6px;
  }
  
  /* Mejoras de rendimiento */
  img {
    max-width: 100%;
    height: auto;
  }
  
  /* Loading states */
  .loading {
    opacity: 0.7;
    pointer-events: none;
  }
</style>