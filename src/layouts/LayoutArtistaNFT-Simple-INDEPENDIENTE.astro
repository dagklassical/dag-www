---
const { 
  title = "Artista NFT - DAG Klassical",
  artistName = "Artista",
  artistImage = "/logo-dag.svg",
  digitalId = null,
  biography = "<p>Biografía del artista</p>",
  collections = [],
  socialLinks = {}
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={`Perfil de ${artistName} en DAG Klassical`} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Meta tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={`Perfil digital de ${artistName} en DAG Klassical`} />
    <meta property="og:image" content={artistImage} />
    <meta property="og:type" content="profile" />
    
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={`Perfil digital de ${artistName} en DAG Klassical`} />
    <meta name="twitter:image" content={artistImage} />
    
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        line-height: 1.6;
        color: #ffffff;
        background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 50%, #16213e 100%);
        min-height: 100vh;
      }
      
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
      }
      
      .header {
        text-align: center;
        margin-bottom: 3rem;
        padding: 2rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
      }
      
      .artist-image {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #7B3FE4;
        margin-bottom: 1.5rem;
        box-shadow: 0 8px 32px rgba(123, 63, 228, 0.3);
      }
      
      .artist-name {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #7B3FE4, #9C27B0);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      
      .digital-id-badge {
        display: inline-block;
        background: linear-gradient(135deg, #00D4AA, #00B894);
        color: #000;
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-size: 0.875rem;
        font-weight: 600;
        margin-top: 1rem;
        text-decoration: none;
        transition: all 0.3s ease;
      }
      
      .digital-id-badge:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 16px rgba(0, 212, 170, 0.3);
      }
      
      .biography {
        background: rgba(255, 255, 255, 0.05);
        padding: 2rem;
        border-radius: 1rem;
        margin-bottom: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
      }
      
      .biography p {
        margin-bottom: 1rem;
        color: #e0e0e0;
        line-height: 1.8;
      }
      
      .biography-highlight {
        background: rgba(123, 63, 228, 0.1);
        padding: 1.5rem;
        border-radius: 0.75rem;
        border: 1px solid rgba(123, 63, 228, 0.2);
        margin: 1.5rem 0;
      }
      
      .biography-highlight h4 {
        color: #7B3FE4;
        margin-bottom: 0.75rem;
        font-size: 1.125rem;
      }
      
      .biography-highlight p {
        color: #cccccc;
        line-height: 1.6;
        margin: 0;
      }
      
      .collections {
        margin-bottom: 2rem;
      }
      
      .collections h2 {
        font-size: 1.875rem;
        margin-bottom: 1.5rem;
        text-align: center;
        color: #7B3FE4;
      }
      
      .collections-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
      }
      
      .collection-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 1rem;
        padding: 1.5rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
      }
      
      .collection-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 32px rgba(123, 63, 228, 0.2);
        border-color: rgba(123, 63, 228, 0.3);
      }
      
      .collection-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 0.5rem;
        margin-bottom: 1rem;
      }
      
      .collection-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #ffffff;
      }
      
      .collection-price {
        font-size: 1.125rem;
        font-weight: bold;
        color: #00D4AA;
        margin-bottom: 0.5rem;
      }
      
      .collection-description {
        color: #cccccc;
        margin-bottom: 1rem;
        line-height: 1.6;
      }
      
      .collection-badge {
        display: inline-block;
        background: linear-gradient(135deg, #7B3FE4, #9C27B0);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 1rem;
        font-size: 0.75rem;
        font-weight: 600;
        margin-bottom: 1rem;
      }
      
      .social-links {
        text-align: center;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
      }
      
      .social-links h3 {
        margin-bottom: 1rem;
        color: #7B3FE4;
      }
      
      .social-links a {
        display: inline-block;
        margin: 0 0.5rem;
        padding: 0.75rem 1rem;
        background: rgba(255, 255, 255, 0.1);
        color: #ffffff;
        text-decoration: none;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
      }
      
      .social-links a:hover {
        background: rgba(123, 63, 228, 0.2);
        border-color: rgba(123, 63, 228, 0.3);
        transform: translateY(-2px);
      }
      
      .back-link {
        display: inline-block;
        margin-top: 2rem;
        padding: 0.75rem 1.5rem;
        background: rgba(123, 63, 228, 0.1);
        color: #7B3FE4;
        text-decoration: none;
        border-radius: 0.5rem;
        border: 1px solid rgba(123, 63, 228, 0.2);
        transition: all 0.3s ease;
      }
      
      .back-link:hover {
        background: rgba(123, 63, 228, 0.2);
        border-color: rgba(123, 63, 228, 0.3);
      }
      
      @media (max-width: 768px) {
        .container {
          padding: 1rem;
        }
        
        .artist-name {
          font-size: 2rem;
        }
        
        .collections-grid {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <img src={artistImage} alt={artistName} class="artist-image" />
        <h1 class="artist-name">{artistName}</h1>
        
        {digitalId && digitalId.status === 'verified' && (
          <div class="digital-id-badge">
            ✓ Digital ID Verificado
          </div>
        )}
      </div>
      
      <div class="biography">
        <div class="biography-content" set:html={biography}></div>
      </div>
      
      {collections.length > 0 && (
        <div class="collections">
          <h2>Colecciones NFT</h2>
          <div class="collections-grid">
            {collections.map((collection) => (
              <div class="collection-card">
                <img src={collection.image} alt={collection.title} class="collection-image" />
                <div class="collection-badge">{collection.type}</div>
                <h3 class="collection-title">{collection.title}</h3>
                <div class="collection-price">{collection.price}</div>
                <p class="collection-description">{collection.description}</p>
              </div>
            ))}
          </div>
        </div>
      )}
      
      <div class="social-links">
        <h3>Sígueme en</h3>
        {socialLinks.spotify && <a href={socialLinks.spotify} target="_blank" rel="noopener noreferrer">Spotify</a>}
        {socialLinks.instagram && <a href={socialLinks.instagram} target="_blank" rel="noopener noreferrer">Instagram</a>}
        {socialLinks.youtube && <a href={socialLinks.youtube} target="_blank" rel="noopener noreferrer">YouTube</a>}
        {socialLinks.twitter && <a href={socialLinks.twitter} target="_blank" rel="noopener noreferrer">Twitter</a>}
      </div>
      
      <a href="/" class="back-link">← Volver al inicio</a>
    </div>
  </body>
</html>