---
// LayoutArtistaNFT-Simple - Versi√≥n m√≠nima para Virginia
import Layout from './Layout.astro';

const { 
  title = "Artista NFT - DAG Klassical",
  artistName = "Artista",
  artistImage = "/dag-www/logo-dag.svg",
  digitalId = null,
  biography = "<p>Biograf√≠a del artista</p>",
  collections = [],
  socialLinks = {}
} = Astro.props;

const baseUrl = import.meta.env.BASE_URL;
---

<Layout title={title}>
  <div class="artist-nft-page">
    
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <div class="artist-image">
            <img src={artistImage} alt={artistName} />
          </div>
          
          <div class="artist-info">
            <h1 class="artist-name">{artistName}</h1>
            
            <!-- DigitalID Badge -->
            {digitalId && (
              <div class={`digital-id-badge ${digitalId.status}`}>
                {digitalId.status === 'verified' ? '‚úÖ' : '‚è≥'} 
                DigitalID {digitalId.status === 'verified' ? 'Verificado' : 'Pendiente'}
              </div>
            )}
            
            <!-- Social Links -->
            {Object.keys(socialLinks).length > 0 && (
              <div class="social-links">
                {socialLinks.instagram && <a href={socialLinks.instagram}>Instagram</a>}
                {socialLinks.youtube && <a href={socialLinks.youtube}>YouTube</a>}
                {socialLinks.spotify && <a href={socialLinks.spotify}>Spotify</a>}
                {socialLinks.twitter && <a href={socialLinks.twitter}>Twitter</a>}
              </div>
            )}
          </div>
        </div>
      </div>
    </section>

    <!-- Biography Section -->
    <section class="biography">
      <div class="container">
        <div class="biography-content" set:html={biography} />
      </div>
    </section>

    <!-- Collections Section -->
    {collections.length > 0 && (
      <section class="collections">
        <div class="container">
          <h2>Colecciones</h2>
          <div class="collections-grid">
            {collections.map(collection => (
              <div class="collection-card">
                <img src={collection.image} alt={collection.title} />
                <div class="collection-info">
                  <h3>{collection.title}</h3>
                  <p>{collection.description}</p>
                  <div class="collection-price">
                    <span class="price">{collection.price}</span>
                    <span class="editions">{collection.remainingEditions}/{collection.totalEditions} disponibles</span>
                  </div>
                  {collection.available && (
                    <button class="btn-primary">Adquirir NFT</button>
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- DigitalID Details (si est√° verificado) -->
    {digitalId?.status === 'verified' && (
      <section class="digitalid-details">
        <div class="container">
          <h3>Detalles del DigitalID</h3>
          <div class="digitalid-info">
            <p><strong>ID:</strong> {digitalId.id}</p>
            <p><strong>Blockchain:</strong> {digitalId.chain}</p>
            <p><strong>Token ID:</strong> {digitalId.tokenId}</p>
            <p><strong>Fecha de Mint:</strong> {digitalId.mintedDate}</p>
            <a href={digitalId.blockchainUrl} target="_blank">Ver en Blockchain</a>
          </div>
        </div>
      </section>
    )}

    <!-- Wallet Connection (si est√° verificado) -->
    {digitalId?.status === 'verified' && (
      <section class="wallet-section">
        <div class="container">
          <button class="wallet-connect-btn">
            üîó Conectar Wallet
          </button>
        </div>
      </section>
    )}

  </div>
</Layout>

<style>
  .artist-nft-page {
    padding: 2rem 0;
    color: #ffffff;
    background: #1a1a1a;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .hero {
    margin-bottom: 4rem;
  }

  .hero-content {
    display: flex;
    gap: 3rem;
    align-items: center;
  }

  .artist-image img {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid #7B3FE4;
  }

  .artist-info {
    flex: 1;
  }

  .artist-name {
    font-size: 3rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #7B3FE4, #E73C7E);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .digital-id-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .digital-id-badge.verified {
    background: linear-gradient(135deg, #28a745, #20c997);
    color: white;
  }

  .digital-id-badge.pending {
    background: linear-gradient(135deg, #ffc107, #fd7e14);
    color: white;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .social-links a {
    padding: 0.5rem 1rem;
    background: rgba(123, 63, 228, 0.2);
    border: 1px solid #7B3FE4;
    border-radius: 0.25rem;
    color: #7B3FE4;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .social-links a:hover {
    background: #7B3FE4;
    color: white;
  }

  .biography {
    margin-bottom: 4rem;
  }

  .biography-content {
    max-width: 800px;
    line-height: 1.8;
    font-size: 1.125rem;
  }

  .biography-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .biography-content :global(.biography-highlight) {
    background: rgba(123, 63, 228, 0.1);
    padding: 2rem;
    border-radius: 1rem;
    margin: 2rem 0;
    border: 1px solid rgba(123, 63, 228, 0.3);
  }

  .collections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .collection-card {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 1rem;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: transform 0.3s ease;
  }

  .collection-card:hover {
    transform: translateY(-5px);
  }

  .collection-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .collection-info {
    padding: 1.5rem;
  }

  .collection-info h3 {
    color: #7B3FE4;
    margin-bottom: 0.5rem;
  }

  .collection-price {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 1rem 0;
  }

  .price {
    font-size: 1.25rem;
    font-weight: 700;
    color: #7B3FE4;
  }

  .editions {
    font-size: 0.875rem;
    color: #999;
  }

  .btn-primary {
    width: 100%;
    padding: 0.75rem;
    background: linear-gradient(135deg, #7B3FE4, #E73C7E);
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(123, 63, 228, 0.3);
  }

  .wallet-section {
    margin-top: 3rem;
    text-align: center;
  }

  .wallet-connect-btn {
    padding: 1rem 2rem;
    background: linear-gradient(135deg, #28a745, #20c997);
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-size: 1.125rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .wallet-connect-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(40, 167, 69, 0.3);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-content {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }

    .artist-name {
      font-size: 2rem;
    }

    .collections-grid {
      grid-template-columns: 1fr;
    }

    .container {
      padding: 0 1rem;
    }
  }
</style>