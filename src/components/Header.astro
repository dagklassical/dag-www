---
// Componente Header - Navegación principal de DAG Klassical
const baseUrl = import.meta.env.BASE_URL;

// Helper function to create correct paths
const getPath = (path: string) => {
  return path === '/' ? baseUrl : `${baseUrl}${path}`;
};

// Helper function for assets
const getAssetPath = (asset: string) => {
  const cleanBase = baseUrl.endsWith('/') ? baseUrl : `${baseUrl}/`;
  const cleanAsset = asset.startsWith('/') ? asset.slice(1) : asset;
  return `${cleanBase}${cleanAsset}`;
};
---

<header class="header">
  <div class="container">
    <!-- Logo -->
    <div class="logo">
      <a href={getPath('/')}>
        <img src={getAssetPath("logo-dag.svg")} alt="DAG Klassical" class="logo-img" />
        <span class="logo-text">DAG Klassical</span>
      </a>
    </div>
    
    <!-- Navegación Principal -->
    <nav class="nav">
      <ul class="nav-menu">
        <li><a href={getPath('/')} class="nav-link">Inicio</a></li>
        <li><a href={getPath('/discografia')} class="nav-link">Discografía</a></li>
        <li><a href={getPath('/lanzamientos')} class="nav-link">Lanzamientos</a></li>
        <li><a href={getPath('/tienda')} class="nav-link">Tienda NFT</a></li>
        <li><a href={getPath('/tickets')} class="nav-link">Tickets</a></li>
        <li><a href={getPath('/music-news')} class="nav-link">Noticias</a></li>
        <li><a href={getPath('/sobre-nosotros')} class="nav-link">Nosotros</a></li>
        <li><a href={getPath('/contactos')} class="nav-link">Contacto</a></li>
      </ul>
      
      <!-- Wallet button para móvil (solo visible en menú activo) -->
      <div class="wallet-section mobile-wallet">
        <button class="wallet-btn" id="connectWallet">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M21 7H3C2.447 7 2 7.447 2 8V16C2 17.103 2.897 18 4 18H20C21.103 18 22 17.103 22 16V8C22 7.447 21.553 7 21 7Z" stroke="currentColor" stroke-width="2" fill="none"/>
            <path d="M18 12H18.01" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
          <span class="wallet-text">Conectar Wallet</span>
        </button>
      </div>
    </nav>
    
    <!-- Wallet button para desktop -->
    <div class="wallet-section desktop-wallet">
      <button class="wallet-btn" id="connectWalletDesktop">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M21 7H3C2.447 7 2 7.447 2 8V16C2 17.103 2.897 18 4 18H20C21.103 18 22 17.103 22 16V8C22 7.447 21.553 7 21 7Z" stroke="currentColor" stroke-width="2" fill="none"/>
          <path d="M18 12H18.01" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
        <span class="wallet-text">Conectar Wallet</span>
      </button>
    </div>
    
    <!-- Menú móvil -->
    <button class="mobile-menu-btn" id="mobileMenuBtn">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</header>

<style>
  .header {
    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    position: sticky;
    top: 0;
    z-index: 1000;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }
  
  /* Logo */
  .logo a {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: #ffffff;
  }
  
  .logo-img {
    width: 40px;
    height: 40px;
  }
  
  .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #7B3FE4, #E73C7E);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  /* Navegación */
  .nav {
    flex: 1;
  }
  
  .nav-menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
    justify-content: center;
  }
  
  .nav-link {
    color: #ffffff;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    padding: 0.5rem 0;
    position: relative;
  }
  
  .nav-link:hover {
    color: #7B3FE4;
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: 0;
    left: 0;
    background: linear-gradient(135deg, #7B3FE4, #E73C7E);
    transition: width 0.3s ease;
  }
  
  .nav-link:hover::after {
    width: 100%;
  }
  
  /* Wallet Button */
  .wallet-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, #7B3FE4, #E73C7E);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .wallet-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(123, 63, 228, 0.3);
  }

  /* Desktop: Show only desktop wallet button */
  .desktop-wallet {
    display: block;
  }

  .mobile-wallet {
    display: none;
  }
  
  /* Mobile Menu */
  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    gap: 0.25rem;
  }
  
  .mobile-menu-btn span {
    width: 25px;
    height: 2px;
    background: #ffffff;
    transition: all 0.3s ease;
  }
  
  /* Mobile Menu Active States */
  .nav.active {
    display: block !important;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: rgba(10, 10, 10, 0.98);
    backdrop-filter: blur(10px);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 2rem;
    z-index: 999;
  }

  .nav.active .nav-menu {
    flex-direction: column;
    gap: 1.5rem;
    text-align: center;
  }

  /* Hamburger Animation */
  .mobile-menu-btn.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .mobile-menu-btn.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-btn.active span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .container {
      padding: 1rem;
    }
    
    .nav {
      display: none;
    }
    
    .mobile-menu-btn {
      display: flex;
    }
    
    /* Hide desktop wallet button in mobile */
    .desktop-wallet {
      display: none;
    }
    
    /* Show mobile wallet button only in active menu */
    .nav.active .mobile-wallet {
      display: block;
      margin-top: 2rem;
      text-align: center;
    }
  }
</style>

<script>
  // Script para el menú móvil y wallet
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuBtn = document.getElementById('mobileMenuBtn');
    const nav = document.querySelector('.nav');
    const navLinks = document.querySelectorAll('.nav-link');
    const walletBtnMobile = document.getElementById('connectWallet');
    const walletBtnDesktop = document.getElementById('connectWalletDesktop');
    
    // Toggle menu on button click
    if (mobileMenuBtn && nav) {
      mobileMenuBtn.addEventListener('click', () => {
        nav.classList.toggle('active');
        mobileMenuBtn.classList.toggle('active');
      });
    }
    
    // Close menu when clicking on a nav link (mobile)
    navLinks.forEach(link => {
      link.addEventListener('click', () => {
        if (window.innerWidth <= 768) {
          nav.classList.remove('active');
          mobileMenuBtn.classList.remove('active');
        }
      });
    });
    
    // Close menu when clicking outside (mobile)
    document.addEventListener('click', (e) => {
      if (window.innerWidth <= 768 && 
          nav.classList.contains('active') &&
          !nav.contains(e.target) && 
          !mobileMenuBtn.contains(e.target)) {
        nav.classList.remove('active');
        mobileMenuBtn.classList.remove('active');
      }
    });
    
    // Wallet button functionality (placeholder)
    const handleWalletConnect = () => {
      alert('Conectar Wallet - Funcionalidad próximamente');
    };
    
    if (walletBtnMobile) {
      walletBtnMobile.addEventListener('click', handleWalletConnect);
    }
    
    if (walletBtnDesktop) {
      walletBtnDesktop.addEventListener('click', handleWalletConnect);
    }
  });
</script>
