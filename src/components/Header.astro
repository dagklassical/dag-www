        <!-- Nosotros con Landing + Dropdown -->
        <li class="nav-item dropdown">
          <a href="/dag-www/nosotros/" class="nav-link dropdown-toggle" data-active={Astro.url.pathname.startsWith('/dag-www/nosotros') ? 'true' : 'false'}>
            <span class="nav-text">Nosotros</span>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <polyline points="6,9 12,15 18,9"></polyline>
            </svg>
          </a>
          <div class="dropdown-menu">
            <a href="/dag-www/nosotros/" class="dropdown-item landing-link">游논 Ver Todo</a>
            <a href="/dag-www/nosotros/dag-klassical/" class="dropdown-item">DAG Klassical</a>
            <a href="/dag-www/nosotros/danilo-alvarez/" class="dropdown-item">Danilo 츼lvarez</a>
            <a href="/dag-www/nosotros/equipo/" class="dropdown-item">Equipo</a>
            <a href="/dag-www/nosotros/terminos/" class="dropdown-item">T칠rminos</a>
          </div>
        </li>
      </ul>
      
      <!-- Acciones de navegaci칩n -->
      <div class="nav-mobile-actions">
        <!-- Bot칩n de B칰squeda -->
        <button class="search-toggle" id="search-toggle" aria-expanded="false" aria-label="Abrir b칰squeda">
          <svg class="search-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <circle cx="11" cy="11" r="8"/>
            <path d="21 21l-4.35-4.35"/>
