</header>


<script>
  // JavaScript para men칰 hamburguesa y b칰squeda
  const navToggle = document.getElementById('nav-toggle');
  const navMenu = document.getElementById('nav-menu');
  const searchToggle = document.getElementById('search-toggle');
  const searchContainer = document.getElementById('search-container');
  const searchInput = document.getElementById('search-input');
  
  if (navToggle && navMenu) {
    navToggle.addEventListener('click', () => {
      const isExpanded = navToggle.getAttribute('aria-expanded') === 'true';
      
      navToggle.setAttribute('aria-expanded', !isExpanded);
      navMenu.classList.toggle('active');
      navToggle.classList.toggle('active');
      
      // Cerrar b칰squeda si est치 abierta
      if (searchContainer.classList.contains('active')) {
        searchContainer.classList.remove('active');
        searchToggle.setAttribute('aria-expanded', 'false');
        searchToggle.classList.remove('active');
      }
      
      // Prevenir scroll cuando men칰 est치 abierto
      document.body.style.overflow = isExpanded ? '' : 'hidden';
    });
    
    // Cerrar men칰 al hacer clic en un enlace
    const navLinks = navMenu.querySelectorAll('.nav-link');
    navLinks.forEach(link => {
      link.addEventListener('click', () => {
        navToggle.setAttribute('aria-expanded', 'false');
        navMenu.classList.remove('active');
        navToggle.classList.remove('active');
        document.body.style.overflow = '';
      });
    });
  }

  // Funcionalidad de b칰squeda
  if (searchToggle && searchContainer) {
    searchToggle.addEventListener('click', () => {
      const isExpanded = searchToggle.getAttribute('aria-expanded') === 'true';
      
      searchToggle.setAttribute('aria-expanded', !isExpanded);
      searchContainer.classList.toggle('active');
      searchToggle.classList.toggle('active');
      
      // Cerrar men칰 si est치 abierto
      if (navMenu && navMenu.classList.contains('active')) {
        navMenu.classList.remove('active');
        navToggle.classList.remove('active');
        document.body.style.overflow = '';
      }
      
      // Focus en input cuando se abre
      if (!isExpanded && searchInput) {
        setTimeout(() => searchInput.focus(), 100);
      }
    });
  }

  // Funcionalidad de dropdowns en m칩vil (tap to toggle)
  const dropdowns = document.querySelectorAll('.dropdown');
  dropdowns.forEach(dropdown => {
    const toggle = dropdown.querySelector('.dropdown-toggle');
    
    if (toggle) {
      toggle.addEventListener('click', (e) => {
        // Solo para m칩vil y cuando el men칰 m칩vil est칠 abierto
        if (window.innerWidth <= 768 && navMenu && navMenu.classList.contains('active')) {
          e.preventDefault();
          e.stopPropagation();
          
          // Cerrar otros dropdowns
          dropdowns.forEach(otherDropdown => {
            if (otherDropdown !== dropdown && otherDropdown.classList.contains('mobile-open')) {
              otherDropdown.classList.remove('mobile-open');
            }
          });
          
          // Toggle este dropdown
          dropdown.classList.toggle('mobile-open');
        }
      });
    }
  });

  // Cerrar dropdowns al hacer clic fuera
  document.addEventListener('click', (e) => {
    if (!e.target.closest('.dropdown')) {
      dropdowns.forEach(dropdown => {
        dropdown.classList.remove('mobile-open');
      });
    }
  });

  // Cerrar b칰squeda al hacer clic fuera
  document.addEventListener('click', (e) => {
    if (!e.target.closest('.search-container') && !e.target.closest('.search-toggle')) {
      searchContainer.classList.remove('active');
      searchToggle.classList.remove('active');
      searchToggle.setAttribute('aria-expanded', 'false');
    }
  });

  // Funcionalidad de b칰squeda b치sica (simulada)
  if (searchInput) {
    searchInput.addEventListener('input', (e) => {
      const query = e.target.value.trim();
      const resultsContainer = document.getElementById('search-results');
      
      if (query.length > 2) {
        // Aqu칤 ir칤a la l칩gica real de b칰squeda
        resultsContainer.innerHTML = `
          <div class="search-result-item">
            <strong>Resultados para:</strong> "${query}"
          </div>
          <div class="search-result-item">Virginia Ram칤rez</div>
          <div class="search-result-item">Sinfon칤a Digital</div>
          <div class="search-result-item">NFT Musical</div>
        `;
        resultsContainer.style.display = 'block';
      } else {
        resultsContainer.style.display = 'none';
      }
    });
  }

  // Manejar escape para cerrar modales
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      // Cerrar men칰 hamburguesa
      if (navMenu && navMenu.classList.contains('active')) {
        navToggle.setAttribute('aria-expanded', 'false');
        navMenu.classList.remove('active');
        navToggle.classList.remove('active');
        document.body.style.overflow = '';
      }
      
      // Cerrar b칰squeda
      if (searchContainer && searchContainer.classList.contains('active')) {
        searchContainer.classList.remove('active');
        searchToggle.classList.remove('active');
        searchToggle.setAttribute('aria-expanded', 'false');
      }
      
      // Cerrar dropdowns m칩viles
      dropdowns.forEach(dropdown => {
        dropdown.classList.remove('mobile-open');
      });
    }
  });
</script>