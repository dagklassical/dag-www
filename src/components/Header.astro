        <!-- M칰sica con Landing + Dropdown -->
        <li class="nav-item dropdown">
          <a href="/dag-www/musica/" class="nav-link dropdown-toggle" data-active={Astro.url.pathname.startsWith('/dag-www/musica') ? 'true' : 'false'}>
