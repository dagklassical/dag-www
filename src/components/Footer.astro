<style>
  .footer {
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    margin-top: auto;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem 1rem;
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }
  
  .footer-section h3 {
    color: #ffffff;
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 1rem;
    border-bottom: 2px solid #7B3FE4;
    padding-bottom: 0.5rem;
    display: inline-block;
  }
  
  .logo .logo-text {
    font-size: 1.8rem;
    font-weight: 700;
    background: linear-gradient(135deg, #7B3FE4, #E73C7E);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
    display: block;
  }
  
  .tagline {
    color: #a0a0a0;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    line-height: 1.4;
  }
  
  .social-links {
    display: flex;
    gap: 1rem;
  }
  
  .social-link {
    color: #a0a0a0;
    transition: all 0.3s ease;
    padding: 0.5rem;
    border-radius: 0.5rem;
    background: rgba(255, 255, 255, 0.05);
  }
  
  .social-link:hover {
    color: #7B3FE4;
    transform: translateY(-2px);
    background: rgba(123, 63, 228, 0.1);
  }
  
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-links li {
    margin-bottom: 0.5rem;
  }
  
  .footer-links a {
    color: #a0a0a0;
    text-decoration: none;
    transition: color 0.3s ease;
    font-size: 0.9rem;
  }
  
  .footer-links a:hover {
    color: #7B3FE4;
  }
  
  .footer-divider {
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    margin: 2rem 0 1rem;
  }
  
  .footer-bottom {
    text-align: center;
  }
  
  .copyright p {
    color: #a0a0a0;
    font-size: 0.8rem;
    margin: 0.25rem 0;
  }
  
  .blockchain-info {
    margin-top: 0.5rem;
  }
  
  .highlight {
    color: #7B3FE4;
    font-weight: 600;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr 1fr;
      gap: 1.5rem;
    }
    
    .container {
      padding: 2rem 1rem 1rem;
    }
  }
  
  @media (max-width: 480px) {
    .footer-content {
      grid-template-columns: 1fr;
      text-align: center;
    }
    
    .social-links {
      justify-content: center;
    }
  }
</style>
