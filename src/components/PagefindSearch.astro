---
// Componente de Búsqueda con Pagefind - DAG Klassical
// Archivo: src/components/PagefindSearch.astro
// Propósito: Búsqueda avanzada usando Pagefind para todo el sitio

// Importar el componente Search de astro-pagefind
import Search from 'astro-pagefind/components/Search';

interface Props {
  placeholder?: string;
  showImages?: boolean;
  showMetadatas?: boolean;
  pageSize?: number;
  autofocus?: boolean;
  className?: string;
}

const { 
  placeholder = "Buscar en todo el sitio...",
  showImages = true,
  showMetadatas = true,
  pageSize = 10,
  autofocus = false,
  className = ""
} = Astro.props;
---

<div class={`pagefind-search ${className}`}>
  <Search 
    placeholder={placeholder}
    showImages={showImages}
    showMetadatas={showMetadatas}
    pageSize={pageSize}
    autofocus={autofocus}
  />
</div>

<style>
  .pagefind-search {
    width: 100%;
    max-width: 600px;
    position: relative;
  }
  
  /* Estilos para el componente Search de Pagefind */
  .pagefind-search :global(.pagefind-ui) {
    width: 100%;
    background: white;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    padding: 0;
    transition: all 0.3s ease;
  }
  
  .pagefind-search :global(.pagefind-ui:focus-within) {
    border-color: #daa520;
    box-shadow: 0 0 0 3px rgba(218, 165, 32, 0.1);
  }
  
  /* Input de búsqueda personalizado */
  .pagefind-search :global(.pagefind-ui__search-input) {
    width: 100%;
    padding: 16px 20px;
    border: none;
    outline: none;
    font-size: 16px;
    color: #1a1a1a;
    background: transparent;
    border-radius: 12px;
  }
  
  .pagefind-search :global(.pagefind-ui__search-input::placeholder) {
    color: #6b7280;
    font-style: italic;
  }
  
  /* Botón de limpiar */
  .pagefind-search :global(.pagefind-ui__clear-search) {
    padding: 8px 12px;
    background: #f3f4f6;
    border: none;
    border-radius: 8px;
    color: #6b7280;
    cursor: pointer;
    margin-right: 12px;
    transition: all 0.2s ease;
  }
  
  .pagefind-search :global(.pagefind-ui__clear-search:hover) {
    background: #e5e7eb;
    color: #374151;
  }
  
  /* Área de resultados */
  .pagefind-search :global(.pagefind-ui__result) {
    padding: 16px 20px;
    border-top: 1px solid #f3f4f6;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }
  
  .pagefind-search :global(.pagefind-ui__result:hover) {
    background: #f9fafb;
  }
  
  .pagefind-search :global(.pagefind-ui__result:first-child) {
    border-top: none;
  }
  
  /* Imagen de resultado */
  .pagefind-search :global(.pagefind-ui__result-image) {
    width: 48px;
    height: 48px;
    border-radius: 8px;
    object-fit: cover;
    margin-right: 16px;
    flex-shrink: 0;
  }
  
  /* Título de resultado */
  .pagefind-search :global(.pagefind-ui__result-title) {
    color: #1a1a1a;
    font-weight: 600;
    font-size: 16px;
    margin-bottom: 8px;
  }
  
  /* Descripción de resultado */
  .pagefind-search :global(.pagefind-ui__result-excerpt) {
    color: #6b7280;
    font-size: 14px;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* URL de resultado */
  .pagefind-search :global(.pagefind-ui__result-url) {
    color: #9ca3af;
    font-size: 12px;
    margin-top: 8px;
    text-decoration: none;
  }
  
  .pagefind-search :global(.pagefind-ui__result-url:hover) {
    color: #daa520;
  }
  
  /* Badge de palabra clave destacada */
  .pagefind-search :global(.pagefind-ui__result-tag) {
    background: #daa520;
    color: white;
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 11px;
    font-weight: 600;
    margin-left: 6px;
  }
  
  /* Contador de resultados */
  .pagefind-search :global(.pagefind-ui__message) {
    padding: 12px 20px;
    color: #6b7280;
    font-size: 14px;
    text-align: center;
  }
  
  /* Estilos responsive */
  @media (max-width: 768px) {
    .pagefind-search {
      max-width: 100%;
    }
    
    .pagefind-search :global(.pagefind-ui__search-input) {
      font-size: 16px; /* Previene zoom en iOS */
      padding: 14px 16px;
    }
    
    .pagefind-search :global(.pagefind-ui__result) {
      padding: 20px 16px;
    }
    
    .pagefind-search :global(.pagefind-ui__result-image) {
      width: 56px;
      height: 56px;
    }
  }
  
  /* Estilos para el tema DAG Klassical */
  :global(body[data-theme="dark"]) .pagefind-search :global(.pagefind-ui) {
    background: #2a2a2a;
    border-color: #3a3a3a;
  }
  
  :global(body[data-theme="dark"]) .pagefind-search :global(.pagefind-ui__search-input) {
    color: #ffffff;
  }
  
  :global(body[data-theme="dark"]) .pagefind-search :global(.pagefind-ui__search-input::placeholder) {
    color: #cccccc;
  }
  
  :global(body[data-theme="dark"]) .pagefind-search :global(.pagefind-ui__result) {
    border-color: #3a3a3a;
  }
  
  :global(body[data-theme="dark"]) .pagefind-search :global(.pagefind-ui__result:hover) {
    background: #3a3a3a;
  }
  
  :global(body[data-theme="dark"]) .pagefind-search :global(.pagefind-ui__result-title) {
    color: #ffffff;
  }
  
  :global(body[data-theme="dark"]) .pagefind-search :global(.pagefind-ui__result-excerpt) {
    color: #cccccc;
  }
</style>