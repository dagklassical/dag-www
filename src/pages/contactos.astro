---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contacto - DAG Klassical" description="Ponte en contacto con DAG Klassical para consultas, colaboraciones y soporte">
  <Header slot="header" />
  
  <!-- Hero Section -->
  <section class="contact-hero">
    <div class="container">
      <h1 class="hero-title">
        <span class="text-gradient">Contacto</span>
      </h1>
      <p class="hero-description">
        ¿Tienes preguntas sobre nuestros NFTs musicales? ¿Eres artista y te interesa colaborar? 
        ¿Necesitas soporte técnico? Estamos aquí para ayudarte.
      </p>
    </div>
  </section>
  
  <!-- Contact Content -->
  <section class="contact-content">
    <div class="container">
      <div class="contact-grid">
        <!-- Contact Form -->
        <div class="contact-form-section">
          <h2 class="section-title">Envíanos un mensaje</h2>
          
          <form class="contact-form" id="contactForm">
            <div class="form-group">
              <label for="name">Nombre completo *</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required 
                class="form-input"
                placeholder="Tu nombre completo"
              />
            </div>
            
            <div class="form-group">
              <label for="email">Correo electrónico *</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required 
                class="form-input"
                placeholder="tu@email.com"
              />
            </div>
            
            <div class="form-group">
              <label for="subject">Asunto *</label>
              <select id="subject" name="subject" required class="form-select">
                <option value="">Selecciona un asunto</option>
                <option value="general">Consulta general</option>
                <option value="artist">Colaboración artística</option>
                <option value="support">Soporte técnico</option>
                <option value="business">Oportunidades de negocio</option>
                <option value="press">Prensa y medios</option>
                <option value="other">Otro</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="wallet">Dirección de wallet (opcional)</label>
              <input 
                type="text" 
                id="wallet" 
                name="wallet" 
                class="form-input"
                placeholder="0x..."
                pattern="^0x[a-fA-F0-9]{40}$"
              />
              <small class="form-help">Si tienes consultas sobre transacciones específicas</small>
            </div>
            
            <div class="form-group">
              <label for="message">Mensaje *</label>
              <textarea 
                id="message" 
                name="message" 
                required 
                class="form-textarea"
                placeholder="Cuéntanos en qué podemos ayudarte..."
                rows="6"
              ></textarea>
            </div>
            
            <div class="form-group">
              <label class="checkbox-label">
                <input type="checkbox" id="privacy" name="privacy" required />
                <span class="checkmark"></span>
                Acepto la <a href="/politica-privacidad">política de privacidad</a> y el tratamiento de mis datos personales
              </label>
            </div>
            
            <button type="submit" class="btn btn-primary form-submit">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M4 12L20 12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <path d="M14 6L20 12L14 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
              Enviar mensaje
            </button>
          </form>
          
          <!-- Success Message -->
          <div class="form-success hidden" id="formSuccess">
            <div class="success-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 12L11 14L15 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <h3>¡Mensaje enviado con éxito!</h3>
            <p>Hemos recibido tu mensaje y te responderemos en un plazo máximo de 24 horas.</p>
          </div>
        </div>
        
        <!-- Contact Info -->
        <div class="contact-info-section">
          <h2 class="section-title">Información de contacto</h2>
          
          <div class="contact-methods">
            <div class="contact-method">
              <div class="method-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M4 4H20C21.1 4 22 4.9 22 6V18C22 19.1 21.1 20 20 20H4C2.9 20 2 19.1 2 18V6C2 4.9 2.9 4 4 4Z" stroke="currentColor" stroke-width="2"/>
                  <polyline points="22,6 12,13 2,6" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
              <div class="method-content">
                <h3>Email</h3>
                <p>contacto@dagklassical.com</p>
                <p class="method-description">Respuesta en 24 horas</p>
              </div>
            </div>
            
            <div class="contact-method">
              <div class="method-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M9 11C9 12.66 10.34 14 12 14C13.66 14 15 12.66 15 11V5C15 3.34 13.66 2 12 2C10.34 2 9 3.34 9 5V11Z" stroke="currentColor" stroke-width="2"/>
                  <path d="M19 11C19 15.42 15.42 19 11 19H8V22H16V19C18.76 19 21 16.76 21 14V11H19Z" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
              <div class="method-content">
                <h3>Discord</h3>
                <p>DAG Klassical Community</p>
                <p class="method-description">Chat en tiempo real</p>
              </div>
            </div>
            
            <div class="contact-method">
              <div class="method-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M21 16.5C21 16.88 20.79 17.21 20.47 17.38L12.57 21.82C12.41 21.94 12.21 22 12 22C11.79 22 11.59 21.94 11.43 21.82L3.53 17.38C3.21 17.21 3 16.88 3 16.5V7.5C3 7.12 3.21 6.79 3.53 6.62L11.43 2.18C11.59 2.06 11.79 2 12 2C12.21 2 12.41 2.06 12.57 2.18L20.47 6.62C20.79 6.79 21 7.12 21 7.5V16.5Z" stroke="currentColor" stroke-width="2"/>
                  <polyline points="7.5,8.5 12,12 16.5,8.5" stroke="currentColor" stroke-width="2"/>
                  <polyline points="7.5,13.5 12,17 16.5,13.5" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
              <div class="method-content">
                <h3>Blockchain</h3>
                <p>Polygon Network</p>
                <p class="method-description">Contratos verificados</p>
              </div>
            </div>
            
            <div class="contact-method">
              <div class="method-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M17.5 19H9A7 7 0 1 1 9 5H17.5A3.5 3.5 0 0 1 17.5 12H17.5A3.5 3.5 0 0 1 17.5 19Z" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
              <div class="method-content">
                <h3>Ubicación</h3>
                <p>Venezuela, Latinoamérica</p>
                <p class="method-description">Operación global</p>
              </div>
            </div>
          </div>
          
          <!-- FAQ Section -->
          <div class="faq-section">
            <h3>Preguntas frecuentes</h3>
            
            <div class="faq-item">
              <button class="faq-question">
                <span>¿Cómo puedo colaborar como artista?</span>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <polyline points="6,9 12,15 18,9" stroke="currentColor" stroke-width="2"/>
                </svg>
              </button>
              <div class="faq-answer">
                <p>
                  Si eres músico clásico y te interesa crear NFTs de tus obras, 
                  envíanos tu portafolio y una propuesta detallada. Evaluamos 
                  cada solicitud cuidadosamente.
                </p>
              </div>
            </div>
            
            <div class="faq-item">
              <button class="faq-question">
                <span>¿Qué soporte técnico ofrecen?</span>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <polyline points="6,9 12,15 18,9" stroke="currentColor" stroke-width="2"/>
                </svg>
              </button>
              <div class="faq-answer">
                <p>
                  Ofrecemos soporte para conexión de wallets, problemas de transacciones, 
                  gestión de NFTs y cualquier duda técnica relacionada con la plataforma.
                </p>
              </div>
            </div>
            
            <div class="faq-item">
              <button class="faq-question">
                <span>¿Cómo verifico la autenticidad de un NFT?</span>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <polyline points="6,9 12,15 18,9" stroke="currentColor" stroke-width="2"/>
                </svg>
              </button>
              <div class="faq-answer">
                <p>
                  Todos nuestros NFTs están registrados en la blockchain de Polygon. 
                  Puedes verificar la autenticidad usando la dirección del contrato 
                  y el ID del token en cualquier explorador de blockchain.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <Footer slot="footer" />
</Layout>

<style>
  /* Contact Hero */
  .contact-hero {
    background: linear-gradient(135deg, rgba(123, 63, 228, 0.1) 0%, rgba(231, 60, 126, 0.1) 100%);
    padding: 6rem 0 4rem;
    text-align: center;
  }
  
  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }
  
  .hero-description {
    font-size: 1.25rem;
    color: var(--text-secondary);
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }
  
  /* Contact Content */
  .contact-content {
    padding: 6rem 0;
  }
  
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }
  
  .section-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 2rem;
    color: var(--text-primary);
  }
  
  /* Contact Form */
  .contact-form {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: 2rem;
  }
  
  .form-group {
    margin-bottom: 1.5rem;
  }
  
  .form-group label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }
  
  .form-input,
  .form-select,
  .form-textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    background: var(--bg-primary);
    color: var(--text-primary);
    font-size: 1rem;
    transition: var(--transition-base);
  }
  
  .form-input:focus,
  .form-select:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--primary-purple);
    box-shadow: 0 0 0 3px rgba(123, 63, 228, 0.1);
  }
  
  .form-textarea {
    resize: vertical;
    min-height: 120px;
  }
  
  .form-help {
    display: block;
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-top: 0.25rem;
  }
  
  /* Checkbox */
  .checkbox-label {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    cursor: pointer;
    font-size: 0.9rem;
    line-height: 1.5;
  }
  
  .checkbox-label input[type="checkbox"] {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }
  
  .checkmark {
    width: 20px;
    height: 20px;
    border: 2px solid var(--border-color);
    border-radius: var(--radius-sm);
    background: var(--bg-primary);
    transition: var(--transition-base);
    flex-shrink: 0;
    margin-top: 2px;
  }
  
  .checkbox-label:hover .checkmark {
    border-color: var(--primary-purple);
  }
  
  .checkbox-label input:checked + .checkmark {
    background: var(--primary-purple);
    border-color: var(--primary-purple);
  }
  
  .checkbox-label input:checked + .checkmark::after {
    content: '✓';
    color: white;
    font-size: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
  }
  
  .checkbox-label a {
    color: var(--primary-purple);
    text-decoration: underline;
  }
  
  /* Form Submit */
  .form-submit {
    width: 100%;
    justify-content: center;
    gap: 0.5rem;
  }
  
  /* Success Message */
  .form-success {
    text-align: center;
    padding: 2rem;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
  }
  
  .success-icon {
    color: #22c55e;
    margin-bottom: 1rem;
  }
  
  .form-success h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #22c55e;
  }
  
  .form-success p {
    color: var(--text-secondary);
  }
  
  /* Contact Methods */
  .contact-methods {
    margin-bottom: 3rem;
  }
  
  .contact-method {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    transition: var(--transition-base);
  }
  
  .contact-method:hover {
    border-color: var(--primary-purple);
  }
  
  .method-icon {
    color: var(--primary-purple);
    padding: 0.5rem;
  }
  
  .method-content h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }
  
  .method-content p {
    margin-bottom: 0.25rem;
  }
  
  .method-description {
    font-size: 0.875rem;
    color: var(--text-secondary);
  }
  
  /* FAQ Section */
  .faq-section h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }
  
  .faq-item {
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    margin-bottom: 0.5rem;
    overflow: hidden;
  }
  
  .faq-question {
    width: 100%;
    padding: 1rem;
    background: var(--bg-card);
    border: none;
    color: var(--text-primary);
    text-align: left;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    transition: var(--transition-base);
  }
  
  .faq-question:hover {
    background: var(--bg-glass);
  }
  
  .faq-question svg {
    transition: var(--transition-base);
  }
  
  .faq-item.active .faq-question svg {
    transform: rotate(180deg);
  }
  
  .faq-answer {
    padding: 0 1rem;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease, padding 0.3s ease;
  }
  
  .faq-item.active .faq-answer {
    max-height: 200px;
    padding: 1rem;
  }
  
  .faq-answer p {
    color: var(--text-secondary);
    line-height: 1.6;
  }
  
  /* Utility Classes */
  .hidden {
    display: none !important;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .contact-form {
      padding: 1.5rem;
    }
    
    .checkbox-label {
      font-size: 0.875rem;
    }
  }
</style>

<script>
  // Form handling
  document.addEventListener('DOMContentLoaded', () => {
    const contactForm = document.getElementById('contactForm');
    const formSuccess = document.getElementById('formSuccess');
    
    // FAQ functionality
    const faqItems = document.querySelectorAll('.faq-item');
    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      question.addEventListener('click', () => {
        // Close other items
        faqItems.forEach(otherItem => {
          if (otherItem !== item) {
            otherItem.classList.remove('active');
          }
        });
        
        // Toggle current item
        item.classList.toggle('active');
      });
    });
    
    // Form submission
    contactForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // Get form data
      const formData = new FormData(contactForm);
      const data = Object.fromEntries(formData);
      
      // Validate wallet address if provided
      if (data.wallet && data.wallet.trim()) {
        const walletRegex = /^0x[a-fA-F0-9]{40}$/;
        if (!walletRegex.test(data.wallet)) {
          alert('La dirección de wallet no es válida. Debe empezar con 0x seguido de 40 caracteres hexadecimales.');
          return;
        }
      }
      
      // Show loading state
      const submitBtn = contactForm.querySelector('.form-submit');
      const originalText = submitBtn.innerHTML;
      submitBtn.innerHTML = '<div class="loading-spinner"></div> Enviando...';
      submitBtn.disabled = true;
      
      try {
        // Simulate API call - replace with actual endpoint
        await new Promise(resolve => setTimeout(resolve, 2000));
        
        // Show success message
        contactForm.style.display = 'none';
        formSuccess.classList.remove('hidden');
        
        console.log('Form data:', data);
        
      } catch (error) {
        console.error('Error sending form:', error);
        alert('Hubo un error al enviar el formulario. Por favor, intenta de nuevo.');
        
        // Restore button
        submitBtn.innerHTML = originalText;
        submitBtn.disabled = false;
      }
    });
  });
</script>
