<style>
  .page-container {
    min-height: 100vh;
  }

  .hero {
    background: linear-gradient(135deg, rgba(123, 63, 228, 0.2), rgba(231, 60, 126, 0.2));
    padding: 4rem 0;
    text-align: center;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #7B3FE4, #E73C7E);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: #b0b0b0;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 2rem;
    color: #ffffff;
    text-align: center;
  }

  /* Featured Event */
  .featured-event {
    padding: 4rem 0;
  }

  .event-card.featured {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 2rem;
    margin-bottom: 2rem;
  }

  .event-image {
    position: relative;
    border-radius: 1rem;
    overflow: hidden;
    background: linear-gradient(135deg, #7B3FE4, #E73C7E);
    display: flex;
    align-items: center;
    justify-content: center;
    aspect-ratio: 16/9;
  }

  .event-image.small {
    aspect-ratio: 1;
  }

  .placeholder-image {
    font-size: 4rem;
    color: white;
  }

  .event-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: rgba(255, 255, 255, 0.9);
    color: #000;
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .event-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #ffffff;
  }

  .event-meta {
    margin-bottom: 1.5rem;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
    color: #b0b0b0;
  }

  .icon {
    font-size: 1.2rem;
  }

  .event-description {
    color: #b0b0b0;
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .ticket-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .price-section {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .price-label {
    color: #888;
    font-size: 0.9rem;
  }

  .price {
    font-size: 1.5rem;
    font-weight: 700;
    color: #7B3FE4;
  }

  .price-usd {
    color: #888;
    font-size: 0.9rem;
  }

  /* Events Grid */
  .upcoming-events {
    padding: 4rem 0;
    background: rgba(255, 255, 255, 0.02);
  }

  .events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .event-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 1.5rem;
    transition: all 0.3s ease;
  }

  .event-card:hover {
    transform: translateY(-5px);
    border-color: #7B3FE4;
    box-shadow: 0 10px 30px rgba(123, 63, 228, 0.2);
  }

  .event-info h3 {
    font-size: 1.2rem;
    color: #ffffff;
    margin: 1rem 0 0.5rem 0;
  }

  .artist {
    color: #7B3FE4;
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .event-date {
    color: #E73C7E;
    font-weight: 500;
    margin-bottom: 0.25rem;
  }

  .event-location {
    color: #888;
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .price {
    font-size: 1.1rem;
    font-weight: 600;
    color: #7B3FE4;
    margin-bottom: 1rem;
  }

  /* Buttons */
  .btn-primary {
    background: linear-gradient(135deg, #7B3FE4, #E73C7E);
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(123, 63, 228, 0.3);
  }

  .btn-secondary {
    background: transparent;
    color: #7B3FE4;
    border: 1px solid #7B3FE4;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
  }

  .btn-secondary:hover {
    background: #7B3FE4;
    color: white;
  }

  /* How it Works */
  .how-it-works {
    padding: 4rem 0;
  }

  .steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .step {
    text-align: center;
    padding: 2rem;
  }

  .step-number {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: linear-gradient(135deg, #7B3FE4, #E73C7E);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 auto 1rem auto;
  }

  .step h3 {
    color: #ffffff;
    margin-bottom: 1rem;
  }

  .step p {
    color: #b0b0b0;
    line-height: 1.5;
  }

  /* FAQ */
  .faq {
    padding: 4rem 0;
    background: rgba(255, 255, 255, 0.02);
  }

  .faq-list {
    max-width: 800px;
    margin: 0 auto;
  }

  .faq-item {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 1rem;
    border-left: 4px solid #7B3FE4;
  }

  .faq-item h3 {
    color: #ffffff;
    margin-bottom: 1rem;
  }

  .faq-item p {
    color: #b0b0b0;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }
    
    .event-card.featured {
      grid-template-columns: 1fr;
      text-align: center;
    }
    
    .ticket-info {
      flex-direction: column;
      text-align: center;
    }
    
    .steps {
      grid-template-columns: 1fr;
    }
  }
</style>