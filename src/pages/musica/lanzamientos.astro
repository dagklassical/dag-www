---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Próximos Lanzamientos - DAG Klassical">
  <div class="page-container">
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <h1 class="hero-title">Próximos Lanzamientos</h1>
        <p class="hero-subtitle">Lo que viene en el futuro de DAG Klassical</p>
      </div>
    </section>

    <!-- Lanzamientos Destacados -->
    <section class="featured-releases">
      <div class="container">
        <h2 class="section-title">Lanzamientos Destacados</h2>
        
        <!-- Lanzamiento Principal -->
        <div class="main-release">
          <div class="release-cover">
            <div class="placeholder-cover">🎵</div>
            <div class="coming-soon-badge">PRÓXIMAMENTE</div>
          </div>
          <div class="release-details">
            <h3 class="release-title">Digital Dreams EP</h3>
            <p class="artist-name">Synthetik Waves</p>
            <p class="release-date">📅 15 de Noviembre, 2025</p>
            <p class="description">
              Un viaje sonoro a través de paisajes digitales inexplorados. 
              Este EP de 5 tracks combina elementos de ambient techno con 
              melodías clásicas reimaginadas para la era blockchain.
            </p>
            <div class="release-features">
              <span class="feature-tag">🎨 Arte NFT Exclusivo</span>
              <span class="feature-tag">🔗 Smart Contracts</span>
              <span class="feature-tag">💎 Edición Limitada</span>
            </div>
            <div class="actions">
              <button class="btn-primary">Pre-Comprar NFT</button>
              <button class="btn-secondary">Notificarme</button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Timeline de Lanzamientos -->
    <section class="timeline">
      <div class="container">
        <h2 class="section-title">Calendario de Lanzamientos</h2>
        
        <div class="timeline-container">
          <!-- Noviembre 2025 -->
          <div class="timeline-item">
            <div class="timeline-date">
              <div class="month">NOV</div>
              <div class="day">15</div>
            </div>
            <div class="timeline-content">
              <h4>Digital Dreams EP</h4>
              <p class="artist">Synthetik Waves</p>
              <span class="status upcoming">Próximamente</span>
            </div>
          </div>

          <!-- Diciembre 2025 -->
          <div class="timeline-item">
            <div class="timeline-date">
              <div class="month">DIC</div>
              <div class="day">03</div>
            </div>
            <div class="timeline-content">
              <h4>Blockchain Symphony</h4>
              <p class="artist">DAG Orchestra</p>
              <span class="status upcoming">Próximamente</span>
            </div>
          </div>

          <!-- Enero 2026 -->
          <div class="timeline-item">
            <div class="timeline-date">
              <div class="month">ENE</div>
              <div class="day">20</div>
            </div>
            <div class="timeline-content">
              <h4>Código Abierto</h4>
              <p class="artist">Varios Artistas</p>
              <span class="status planned">En Planificación</span>
            </div>
          </div>

          <!-- Febrero 2026 -->
          <div class="timeline-item">
            <div class="timeline-date">
              <div class="month">FEB</div>
              <div class="day">14</div>
            </div>
            <div class="timeline-content">
              <h4>Love.exe</h4>
              <p class="artist">Romantic Algorithms</p>
              <span class="status planned">En Planificación</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Newsletter Signup -->
    <section class="newsletter">
      <div class="container">
        <div class="newsletter-content">
          <h2>Mantente al día</h2>
          <p>Suscríbete para recibir notificaciones sobre nuevos lanzamientos</p>
          <form class="newsletter-form">
            <input type="email" placeholder="tu@email.com" required>
            <button type="submit">Suscribirme</button>
          </form>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .page-container {
    min-height: 100vh;
  }

  .hero {
    background: linear-gradient(135deg, rgba(123, 63, 228, 0.2), rgba(231, 60, 126, 0.2));
    padding: 4rem 0;
    text-align: center;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #7B3FE4, #E73C7E);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: #b0b0b0;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 2rem;
    color: #ffffff;
  }

  /* Featured Release */
  .featured-releases {
    padding: 4rem 0;
  }

  .main-release {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 2rem;
  }

  .release-cover {
    position: relative;
    aspect-ratio: 1;
    border-radius: 1rem;
    overflow: hidden;
    background: linear-gradient(135deg, #7B3FE4, #E73C7E);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder-cover {
    font-size: 6rem;
    color: white;
  }

  .coming-soon-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(255, 255, 255, 0.9);
    color: #000;
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .release-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #ffffff;
  }

  .artist-name {
    color: #7B3FE4;
    font-size: 1.1rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .release-date {
    color: #E73C7E;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .description {
    color: #b0b0b0;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .release-features {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .feature-tag {
    background: rgba(123, 63, 228, 0.2);
    color: #7B3FE4;
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .actions {
    display: flex;
    gap: 1rem;
  }

  .btn-primary {
    background: linear-gradient(135deg, #7B3FE4, #E73C7E);
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(123, 63, 228, 0.3);
  }

  .btn-secondary {
    background: transparent;
    color: #ffffff;
    border: 1px solid rgba(255, 255, 255, 0.3);
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-secondary:hover {
    border-color: #7B3FE4;
    color: #7B3FE4;
  }

  /* Timeline */
  .timeline {
    padding: 4rem 0;
    background: rgba(255, 255, 255, 0.02);
  }

  .timeline-container {
    max-width: 600px;
    margin: 0 auto;
  }

  .timeline-item {
    display: flex;
    gap: 2rem;
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 1rem;
    border-left: 4px solid #7B3FE4;
  }

  .timeline-date {
    text-align: center;
    min-width: 60px;
  }

  .month {
    font-size: 0.8rem;
    color: #7B3FE4;
    font-weight: 600;
  }

  .day {
    font-size: 1.5rem;
    font-weight: 700;
    color: #ffffff;
  }

  .timeline-content h4 {
    font-size: 1.2rem;
    color: #ffffff;
    margin-bottom: 0.25rem;
  }

  .timeline-content .artist {
    color: #b0b0b0;
    margin-bottom: 0.5rem;
  }

  .status {
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .status.upcoming {
    background: rgba(231, 60, 126, 0.2);
    color: #E73C7E;
  }

  .status.planned {
    background: rgba(255, 255, 255, 0.1);
    color: #888;
  }

  /* Newsletter */
  .newsletter {
    padding: 4rem 0;
    background: linear-gradient(135deg, rgba(123, 63, 228, 0.1), rgba(231, 60, 126, 0.1));
  }

  .newsletter-content {
    text-align: center;
    max-width: 500px;
    margin: 0 auto;
  }

  .newsletter-content h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: #ffffff;
  }

  .newsletter-content p {
    color: #b0b0b0;
    margin-bottom: 2rem;
  }

  .newsletter-form {
    display: flex;
    gap: 1rem;
    max-width: 400px;
    margin: 0 auto;
  }

  .newsletter-form input {
    flex: 1;
    padding: 1rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 0.5rem;
    background: rgba(255, 255, 255, 0.05);
    color: #ffffff;
  }

  .newsletter-form input::placeholder {
    color: #888;
  }

  .newsletter-form button {
    background: linear-gradient(135deg, #7B3FE4, #E73C7E);
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .newsletter-form button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(123, 63, 228, 0.3);
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }
    
    .main-release {
      grid-template-columns: 1fr;
      text-align: center;
    }
    
    .timeline-item {
      flex-direction: column;
      text-align: center;
    }
    
    .newsletter-form {
      flex-direction: column;
    }
  }
</style>