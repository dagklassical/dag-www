---
// Página principal de Artistas - DAG Klassical
// Lista todos los artistas con NFT disponibles

import Layout from '../../../layouts/Layout.astro';

const baseUrl = import.meta.env.BASE_URL;
const getPath = (path: string) => path === '/' ? baseUrl : `${baseUrl}${path}`;

// === LISTA DE ARTISTAS DISPONIBLES ===
const artists = [
  {
    slug: 'virginia-ramirez',
    name: 'Virginia Ramírez',
    image: getPath('/obras/virginia-ramirez/profile.svg'),
    genre: 'Jazz, Música Popular, Circo',
    digitalId: 'verified',
    description: 'Primera artista con Digital ID verificado. Pianista, cantante y artista circense.',
    collections: 1,
    featured: true
  }
  // Aquí se agregarán más artistas en el futuro
];

const pageTitle = 'Artistas | DAG Klassical';
const pageDescription = 'Descubre a los artistas venezolanos con Digital ID verificado y colecciones NFT únicas.';
---

<Layout title={pageTitle}>
  <div class="artists-page">
    <div class="container">
      <header class="page-header">
        <h1 class="page-title">Artistas DAG Klassical</h1>
        <p class="page-description">{pageDescription}</p>
      </header>

      <div class="artists-grid">
        {artists.map((artist) => (
          <div class={`artist-card ${artist.featured ? 'featured' : ''}`}>
            <div class="artist-image">
              <img src={artist.image} alt={artist.name} />
              {artist.digitalId === 'verified' && (
                <div class="digital-id-badge">
                  <span class="badge-icon">✓</span>
                  <span class="badge-text">Digital ID</span>
                </div>
              )}
            </div>
            
            <div class="artist-info">
              <h2 class="artist-name">{artist.name}</h2>
              <p class="artist-genre">{artist.genre}</p>
              <p class="artist-description">{artist.description}</p>
              
              <div class="artist-stats">
                <span class="collections-count">
                  {artist.collections} {artist.collections === 1 ? 'Colección' : 'Colecciones'}
                </span>
              </div>
              
              <a href={getPath(`/musica/artistas/${artist.slug}/`)} class="view-profile-btn">
                Ver Perfil Completo
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</Layout>

<style>
.artists-page {
  min-height: 100vh;
  padding: 2rem 0;
  background: linear-gradient(135deg, #0f0f23, #1a1a2e);
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

.page-header {
  text-align: center;
  margin-bottom: 3rem;
}

.page-title {
  font-size: 3rem;
  font-weight: 700;
  background: linear-gradient(135deg, #7B3FE4, #E73C7E);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 1rem;
}

.page-description {
  font-size: 1.25rem;
  color: #cccccc;
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.6;
}

.artists-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 2rem;
  margin-top: 2rem;
}

.artist-card {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 1rem;
  padding: 2rem;
  border: 1px solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
  position: relative;
}

.artist-card:hover {
  transform: translateY(-5px);
  border-color: #7B3FE4;
  box-shadow: 0 10px 30px rgba(123, 63, 228, 0.2);
}

.artist-card.featured {
  border: 2px solid #7B3FE4;
  background: rgba(123, 63, 228, 0.1);
}

.artist-image {
  position: relative;
  margin-bottom: 1.5rem;
}

.artist-image img {
  width: 100%;
  height: 200px;
  object-fit: cover;
  border-radius: 0.75rem;
}

.digital-id-badge {
  position: absolute;
  top: 0.75rem;
  right: 0.75rem;
  background: #28a745;
  color: white;
  padding: 0.5rem;
  border-radius: 0.5rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.875rem;
  font-weight: 600;
}

.badge-icon {
  font-size: 1rem;
}

.artist-info {
  text-align: center;
}

.artist-name {
  font-size: 1.5rem;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 0.5rem;
}

.artist-genre {
  color: #7B3FE4;
  font-weight: 600;
  margin-bottom: 1rem;
  font-size: 0.875rem;
}

.artist-description {
  color: #cccccc;
  line-height: 1.6;
  margin-bottom: 1.5rem;
  font-size: 0.875rem;
}

.artist-stats {
  margin-bottom: 1.5rem;
}

.collections-count {
  background: rgba(123, 63, 228, 0.2);
  color: #7B3FE4;
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  font-size: 0.875rem;
  font-weight: 600;
}

.view-profile-btn {
  display: inline-block;
  background: linear-gradient(135deg, #7B3FE4, #E73C7E);
  color: white;
  padding: 0.75rem 1.5rem;
  border-radius: 0.5rem;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.3s ease;
}

.view-profile-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(123, 63, 228, 0.4);
}

/* Responsive */
@media (max-width: 768px) {
  .page-title {
    font-size: 2rem;
  }
  
  .artists-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .artist-card {
    padding: 1.5rem;
  }
}
</style>