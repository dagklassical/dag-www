---
import Layout from '../../../layouts/Layout.astro';

const baseUrl = import.meta.env.BASE_URL;
const getPath = (path: string) => path === '/' ? baseUrl : `${baseUrl}${path}`;
const getAssetPath = (asset: string) => {
  const cleanBase = baseUrl.endsWith('/') ? baseUrl : `${baseUrl}/`;
  const cleanAsset = asset.startsWith('/') ? asset.slice(1) : asset;
  return `${cleanBase}${cleanAsset}`;
};

const artistas = [
  {
    nombre: 'Virginia Ramírez',
    imagen: 'artistas/virginia-ramirez/profile.jpg',
    genero: 'Jazz / LatinJazz',
    descripcion: 'Pianista venezolana que fusiona el jazz moderno con la tradición latinoamericana.',
    url: getPath('/musica/artistas/virginia-ramirez')
  }
  // Agregar más artistas aquí
];
---

<Layout title="Artistas - DAG Klassical">
  <div class="artistas-page">
    <!-- Hero Section -->
    <section class="page-hero">
      <div class="container">
        <h1 class="page-title">Nuestros Artistas</h1>
        <p class="page-subtitle">
          Conoce a los talentosos músicos que forman parte de la familia DAG Klassical,
          revolucionando la industria musical con blockchain y NFTs.
        </p>
      </div>
    </section>

    <!-- Artistas Grid -->
    <section class="artistas-grid">
      <div class="container">
        {artistas.map(artista => (
          <a href={artista.url} class="artista-card">
            <div class="artista-image">
              <img src={getAssetPath(artista.imagen)} alt={artista.nombre} />
              <div class="artista-overlay">
                <span class="view-profile">Ver Perfil</span>
              </div>
            </div>
            <div class="artista-info">
              <h2 class="artista-nombre">{artista.nombre}</h2>
              <p class="artista-genero">{artista.genero}</p>
              <p class="artista-descripcion">{artista.descripcion}</p>
            </div>
          </a>
        ))}

        <!-- Placeholder para futuros artistas -->
        <div class="coming-soon-card">
          <div class="coming-soon-content">
            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 5v14M5 12h14"/>
            </svg>
            <h3>Más Artistas Próximamente</h3>
            <p>Estamos trabajando para traerte más talento excepcional</p>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .artistas-page {
    min-height: 100vh;
  }

  /* Hero Section */
  .page-hero {
    background: linear-gradient(135deg, rgba(123, 63, 228, 0.1), rgba(231, 60, 126, 0.1));
    padding: 4rem 2rem;
    text-align: center;
  }

  .page-hero .container {
    max-width: 900px;
    margin: 0 auto;
  }

  .page-title {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, #7B3FE4, #E73C7E);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .page-subtitle {
    font-size: 1.25rem;
    line-height: 1.8;
    color: #e0e0e0;
  }

  /* Artistas Grid */
  .artistas-grid {
    padding: 4rem 2rem;
  }

  .artistas-grid .container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .artista-card {
    text-decoration: none;
    color: inherit;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 1rem;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .artista-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 60px rgba(123, 63, 228, 0.3);
  }

  .artista-image {
    position: relative;
    width: 100%;
    height: 300px;
    overflow: hidden;
  }

  .artista-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .artista-card:hover .artista-image img {
    transform: scale(1.1);
  }

  .artista-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(123, 63, 228, 0.9), rgba(231, 60, 126, 0.9));
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .artista-card:hover .artista-overlay {
    opacity: 1;
  }

  .view-profile {
    color: white;
    font-size: 1.25rem;
    font-weight: 600;
    padding: 1rem 2rem;
    border: 2px solid white;
    border-radius: 2rem;
  }

  .artista-info {
    padding: 1.5rem;
  }

  .artista-nombre {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .artista-genero {
    color: #7B3FE4;
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 1rem;
  }

  .artista-descripcion {
    color: #b0b0b0;
    line-height: 1.6;
  }

  /* Coming Soon Card */
  .coming-soon-card {
    background: rgba(255, 255, 255, 0.02);
    border: 2px dashed rgba(255, 255, 255, 0.2);
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
  }

  .coming-soon-content {
    text-align: center;
    padding: 2rem;
    color: #999;
  }

  .coming-soon-content svg {
    margin-bottom: 1rem;
    opacity: 0.5;
  }

  .coming-soon-content h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: #ccc;
  }

  .coming-soon-content p {
    font-size: 1rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .page-title {
      font-size: 2.5rem;
    }

    .page-subtitle {
      font-size: 1.125rem;
    }

    .artistas-grid .container {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>