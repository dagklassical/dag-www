---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Obtener todas las noticias del CMS
const allNews = await getCollection('news');
// Ordenar por fecha (más reciente primero)
const sortedNews = allNews.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Layout 
  title="Noticias - DAG Klassical" 
  description="Últimas noticias y novedades de DAG Klassical"
>
  <div class="news-page">
    <header class="page-header">
      <h1>Noticias</h1>
      <p>Últimas novedades de DAG Klassical</p>
    </header>

    <div class="news-grid">
      {sortedNews.length > 0 ? (
        sortedNews.map(async (newsItem) => {
          const { Content } = await newsItem.render();
          return (
            <article class="news-card">
              <header class="news-header">
                <h2>{newsItem.data.title}</h2>
                <time datetime={newsItem.data.date.toISOString()}>
                  {newsItem.data.date.toLocaleDateString('es-ES', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
              </header>
              <div class="news-content">
                <Content />
              </div>
            </article>
          );
        })
      ) : (
        <div class="no-news">
          <p>No hay noticias disponibles en este momento.</p>
          <p><em>Las noticias creadas desde el CMS aparecerán aquí automáticamente.</em></p>
        </div>
      )}
    </div>
  </div>

  <style>
    .news-page {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }

    .page-header {
      text-align: center;
      margin-bottom: 3rem;
      padding: 2rem 0;
      border-bottom: 2px solid var(--color-secondary);
    }

    .page-header h1 {
      font-family: var(--font-display);
      font-size: 3rem;
      color: var(--color-primary);
      margin-bottom: 1rem;
    }

    .page-header p {
      font-size: 1.2rem;
      color: var(--color-text-light);
    }

    .news-grid {
      display: grid;
      gap: 2rem;
    }

    .news-card {
      background: var(--color-surface);
      border-radius: var(--border-radius);
      padding: 2rem;
      box-shadow: var(--shadow);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .news-card:hover {
      transform: translateY(-5px);
      box-shadow: var(--shadow-lg);
    }

    .news-header {
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid #eee;
    }

    .news-header h2 {
      font-family: var(--font-display);
      font-size: 1.8rem;
      color: var(--color-primary);
      margin-bottom: 0.5rem;
    }

    .news-header time {
      color: var(--color-text-light);
      font-size: 0.9rem;
      font-weight: 500;
    }

    .news-content {
      line-height: 1.7;
    }

    .news-content :global(h3) {
      color: var(--color-accent);
      margin: 1.5rem 0 1rem;
    }

    .news-content :global(p) {
      margin-bottom: 1rem;
    }

    .news-content :global(ul), 
    .news-content :global(ol) {
      margin: 1rem 0;
      padding-left: 2rem;
    }

    .no-news {
      text-align: center;
      padding: 4rem 2rem;
      color: var(--color-text-light);
    }

    .no-news p {
      font-size: 1.1rem;
      margin-bottom: 1rem;
    }

    .no-news em {
      color: var(--color-secondary);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .news-page {
        padding: 1rem;
      }

      .page-header h1 {
        font-size: 2.5rem;
      }

      .news-card {
        padding: 1.5rem;
      }

      .news-header h2 {
        font-size: 1.5rem;
      }
    }
  </style>
</Layout>