<!-- 🎨 ESTILOS BASE (sin diseño elaborado) -->
<style>
  .hero-section {
    background: linear-gradient(135deg, #7B3FE4 0%, #E73C7E 100%);
    padding: 4rem 0;
    text-align: center;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .hero-content h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: white;
  }
  
  .hero-content p {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.9);
  }
  
  .content-section {
    padding: 4rem 0;
  }
  
  .about-section {
    margin-bottom: 4rem;
  }
  
  .content-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }
  
  .text-content h2 {
    color: #7B3FE4;
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
  }
  
  .lead {
    font-size: 1.3rem;
    line-height: 1.6;
    color: #a0a0a0;
    margin-bottom: 1.5rem;
  }
  
  .text-content p {
    color: #a0a0a0;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }
  
  .cta-links {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }
  
  .cta-link {
    display: inline-block;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, #7B3FE4, #E73C7E);
    color: white;
    text-decoration: none;
    border-radius: 0.5rem;
    font-weight: 600;
    transition: transform 0.3s ease;
  }
  
  .cta-link.secondary {
    background: transparent;
    border: 2px solid #7B3FE4;
    color: #7B3FE4;
  }
  
  .cta-link:hover {
    transform: translateY(-2px);
  }
  
  .about-image {
    width: 100%;
    max-width: 400px;
    border-radius: 1rem;
  }
  
  .mission-section {
    margin: 4rem 0;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 1rem;
    padding: 3rem;
  }
  
  .mission-cards {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }
  
  .mission-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 2rem;
  }
  
  .mission-card h3 {
    color: #7B3FE4;
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }
  
  .mission-card p {
    color: #a0a0a0;
    line-height: 1.6;
  }
  
  .achievements-section {
    margin: 4rem 0;
    text-align: center;
  }
  
  .achievements-section h2 {
    color: #7B3FE4;
    font-size: 2.5rem;
    margin-bottom: 2rem;
  }
  
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .stat-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 2rem;
  }
  
  .stat-number {
    font-size: 3rem;
    font-weight: 700;
    color: #7B3FE4;
    margin-bottom: 0.5rem;
  }
  
  .stat-label {
    color: #a0a0a0;
    font-size: 1.1rem;
  }
  
  .team-section {
    margin: 4rem 0;
  }
  
  .team-section h2 {
    color: #7B3FE4;
    font-size: 2.5rem;
    margin-bottom: 2rem;
    text-align: center;
  }
  
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .team-member {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 2rem;
    text-align: center;
  }
  
  .member-photo {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    margin-bottom: 1rem;
    object-fit: cover;
  }
  
  .team-member h3 {
    color: #7B3FE4;
    margin-bottom: 0.5rem;
  }
  
  .member-role {
    color: #E73C7E;
    font-weight: 600;
    margin-bottom: 1rem;
  }
  
  .member-bio {
    color: #a0a0a0;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }
  
  .member-link {
    color: #7B3FE4;
    text-decoration: none;
    font-weight: 600;
  }
  
  .member-link:hover {
    text-decoration: underline;
  }
  
  @media (max-width: 768px) {
    .content-grid,
    .mission-cards {
      grid-template-columns: 1fr;
    }
    
    .hero-content h1 {
      font-size: 2rem;
    }
    
    .cta-links {
      flex-direction: column;
    }
  }
</style>